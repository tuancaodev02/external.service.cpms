{
    "name": "external.services.cpms",
    "module": "./src/index.ts",
    "type": "module",
    "main": "./api/index.js",
    "scripts": {
        "dev": "bun --env-file=.env --hot ./src/index.ts",
        "start": "bun --env-file=.env ./api/index.js",
        "build": "bun build ./src/index.ts --outdir ./api --target=node --format=esm --external @prisma/client && prisma generate",
        "vercel:deploy": "bun run build && vercel --prod",
        "vercel:deploy:preview": "bun run build && vercel",
        "test": "bun test --preload ./src/index.ts",
        "format": "prettier --write \"src/**/*.ts\"",
        "prisma:generate": "prisma generate",
        "prisma:studio": "prisma studio",
        "prisma:migrate:dev": "prisma migrate dev",
        "prisma:migrate:deploy": "prisma migrate deploy",
        "prisma:db:seed": "bun ./prisma/seed.ts",
        "postinstall": "prisma generate",
        "db:reset": "prisma migrate reset && bun run prisma:db:seed",
        "db:setup": "prisma generate && prisma migrate deploy && bun run prisma:db:seed"
    },
    "devDependencies": {
        "@types/bun": "^1.1.34",
        "@types/cors": "^2.8.19",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/nodemailer": "^6.4.21",
        "@types/uuid": "^9.0.8",
        "@types/web": "^0.0.162",
        "prettier": "^3.7.4",
        "prisma": "6.8.1",
        "tsc-alias": "^1.8.16",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.6.2",
        "vercel": "^50.4.8"
    },
    "dependencies": {
        "@prisma/client": "6.8.1",
        "@types/bcryptjs": "^2.4.6",
        "@types/express": "^4.17.25",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.3",
        "cors": "^2.8.5",
        "es6-shim": "^0.35.8",
        "express": "^4.22.1",
        "jsonwebtoken": "^9.0.3",
        "moment-timezone": "^0.5.48",
        "nodemailer": "^6.10.1",
        "reflect-metadata": "^0.2.2",
        "uuid": "^10.0.0"
    },
    "prisma": {
        "seed": "bun ./prisma/seed.ts"
    }
}
