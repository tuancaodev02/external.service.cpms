// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  output        = "../node_modules/.prisma/client"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
  moduleFormat  = "esmodule"
}

datasource db {
  provider = "sqlserver"
  url      = env("DB_URL")
}

// Users Model
model Users {
  id           String   @id @default(uuid())
  name         String
  birthday     String
  phone        String
  address      String
  email        String   @unique
  password     String
  refreshToken String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  userRoles           UserRoles[]
  userCourses         UserCourses[]
  courseRegistrations CourseRegisters[]

  @@map("users")
}

// Roles Model
model Roles {
  id          String   @id @default(uuid())
  title       String
  role        Int      @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  userRoles UserRoles[]

  @@map("roles")
}

// UserRoles (Many-to-Many relationship)
model UserRoles {
  id        String   @id @default(uuid())
  userId    String
  roleId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user Users @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Roles @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId])
  @@map("user_roles")
}

// Schools Model
model Schools {
  id          String   @id @default(uuid())
  title       String
  code        String   @unique
  address     String
  email       String
  phone       String
  logoUrl     String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("schools")
}

// Curricula Model
model Curricula {
  id            String   @id @default(uuid())
  title         String
  description   String
  code          String   @unique
  durationStart String
  durationEnd   String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  faculties Faculties[]

  @@map("curricula")
}

// Faculties Model
model Faculties {
  id            String   @id @default(uuid())
  title         String
  description   String
  code          String   @unique
  durationStart String
  durationEnd   String
  thumbnailUrl  String?
  curriculumId  String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  curriculum Curricula @relation(fields: [curriculumId], references: [id], onDelete: Cascade)
  courses    Courses[]

  @@map("faculties")
}

// Courses Model
model Courses {
  id            String   @id @default(uuid())
  title         String
  code          String   @unique
  durationStart String
  durationEnd   String
  quantity      Int
  description   String?
  facultyId     String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  faculty       Faculties             @relation(fields: [facultyId], references: [id], onDelete: Cascade)
  requirements  CourseRequirements[]
  userCourses   UserCourses[]
  registrations CourseRegisters[]

  @@map("courses")
}

// CourseRequirements Model
model CourseRequirements {
  id          String   @id @default(uuid())
  title       String
  code        String
  description String?
  courseId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  course Courses @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@map("course_requirements")
}

// UserCourses Model
model UserCourses {
  id        String   @id @default(uuid())
  userId    String
  courseId  String
  status    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user   Users   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Courses @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@map("user_courses")
}

// CourseRegisters Model
model CourseRegisters {
  id        String   @id @default(uuid())
  userId    String
  courseId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user   Users   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Courses @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@map("course_registers")
}

// News Model
model News {
  id          String   @id @default(uuid())
  title       String
  contents    String   @db.NVarChar(Max)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("news")
}

// Admissions Model
model Admissions {
  id        String   @id @default(uuid())
  name      String
  birthday  String
  phone     String
  address   String
  email     String
  gender    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admissions")
}

// Contacts Model
model Contacts {
  id         String   @id @default(uuid())
  department String
  email      String
  phone      String
  message    String   @db.NVarChar(Max)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("contacts")
}
